{# Confirmation de checkout : affiche un récapitulatif des coordonnées avant paiement #}
{% extends 'base.html.twig' %}
{% block title %}
	Confirmation de commande - Auxilia E-commerce
{% endblock %}

{% block body %}
	<div class="container" style="margin-top: 3rem; margin-bottom: 5rem;">
		<div style="max-width: 800px; margin: 0 auto; text-align: center;">
			<div style="width: 80px; height: 80px; background: #d1fae5; color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2.5rem; margin: 0 auto 2rem;">
				<i class="fas fa-check"></i>
			</div>

			<h1 style="font-size: 2.5rem; font-weight: 800; color: var(--color-dark); margin-bottom: 1rem;">
				Vos coordonnées sont
				<span style="color: var(--color-primary);">à jour</span>
			</h1>

			<p style="font-size: 1.1rem; color: var(--color-text-light); margin-bottom: 3rem;">
				Nous avons vérifié vos informations. Vous pouvez maintenant procéder au paiement de votre commande.
			</p>

			<div style="background: white; border-radius: 24px; box-shadow: 0 10px 30px rgba(0,0,0,0.05); padding: 3rem; text-align: left; border: 1px solid #f0f0f0;">
				<h3 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 2rem; border-bottom: 2px solid #f8fafc; padding-bottom: 1rem;">
					Résumé de livraison
				</h3>

				<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
					<div>
						<h4 style="font-size: 0.9rem; text-transform: uppercase; color: #94a3b8; letter-spacing: 1px; margin-bottom: 0.5rem;">Destinataire</h4>
						<p style="font-size: 1.1rem; font-weight: 600; color: var(--color-dark);">{{ app.user.firstName }}
							{{ app.user.lastName }}</p>
						<p style="color: var(--color-text-light); margin-top: 0.25rem;">{{ app.user.phone }}</p>
					</div>
					<div>
						<h4 style="font-size: 0.9rem; text-transform: uppercase; color: #94a3b8; letter-spacing: 1px; margin-bottom: 0.5rem;">Adresse de livraison</h4>
						<p style="font-size: 1.1rem; font-weight: 600; color: var(--color-dark);">{{ app.user.address }}</p>
						<p style="color: var(--color-text-light); margin-top: 0.25rem;">{{ app.user.postalCode }}
							{{ app.user.city }}</p>
						<p style="color: var(--color-text-light);">{{ app.user.country }}</p>
					</div>
				</div>

				<div style="margin-top: 3rem; display: flex; justify-content: space-between; align-items: center; padding-top: 2rem; border-top: 2px solid #f8fafc;">
					<a href="{{ path('app_profile') }}" class="btn" style="background: transparent; color: var(--color-text-light); border: 1px solid #e2e8f0; padding: 0.8rem 1.5rem; border-radius: 12px; font-weight: 600;">
						Modifier mes infos
					</a>

					<form action="{{ path('app_order_validate') }}" method="POST">
						<input type="hidden" name="_token" value="{{ csrf_token('order-validate') }}">
						<button type="submit" class="btn btn-primary" style="padding: 1rem 2.5rem; border-radius: 14px; font-weight: 700; font-size: 1.1rem; box-shadow: 0 10px 15px rgba(37, 99, 235, 0.2); border: none; cursor: pointer;">
							Confirmer et Payer
						</button>
					</form>
				</div>
			</div>

			<div style="margin-top: 2rem;">
				<a href="{{ path('cart_index') }}" style="color: var(--color-primary); text-decoration: none; font-weight: 600;">
					<i class="fas fa-arrow-left"></i>
					Retour au panier
				</a>
			</div>
		</div>
	</div>
{% endblock %}
