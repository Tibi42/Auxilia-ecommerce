{# Layout de base de l'application #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Auxilia E-commerce
			{% endblock %}
		</title>

		<link
		rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">
		<!-- Resource Hints -->
		<link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
		<link rel="preconnect" href="https://images.unsplash.com" crossorigin>
		<link rel="preconnect" href="https://vectorlogo.zone" crossorigin>
		<link rel="preconnect" href="https://i.pravatar.cc" crossorigin>
		<link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
		<link
		rel="dns-prefetch" href="https://images.unsplash.com">

		<!-- Preload Critical Assets -->
		<link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" as="style" crossorigin>

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" media="all" crossorigin>

		<link rel="stylesheet" href="{{ asset('styles/cart.css') }}">
		<link rel="stylesheet" href="{{ asset('styles/modal.css') }}"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{# Importation de la map des scripts Stimulus/Turbo #}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body
		data-controller="modal">
		{# Composant En-tête : contient le bandeau d'info, la navigation et les actions utilisateur #}
		{% include 'components/header.html.twig' %}

		<main>
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="flash flash-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}
		</main>

		{# Composant Pied de page : contient les liens utiles, les réseaux sociaux et le copyright #}
		{% include 'components/footer.html.twig' %}

		{# Product Modal structure #}
		<div class="modal-overlay" data-modal-target="dialog" data-action="click->modal#closeBackground">
			<div class="modal-dialog">
				<div class="modal-header">
					<h3 class="modal-title" data-modal-target="title">Titre du produit</h3>
					<button class="modal-close" data-action="click->modal#close" title="Fermer">&times;</button>
				</div>
				<div class="modal-body">
					<p data-modal-target="description">Description...</p>
					<div class="modal-price" data-modal-target="price">0.00 €</div>
				</div>
				<div class="modal-footer">
					<button class="btn btn-secondary" data-action="click->modal#close">Fermer</button>
					<a href="#" class="btn btn-primary" data-modal-target="addToCartLink">
						<i class="fas fa-cart-plus"></i>
						Ajouter au panier
					</a>
				</div>
			</div>
		</div>
	</body>
</html>
